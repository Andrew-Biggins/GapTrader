<Window x:Class="GapTraderWPF.GraphWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GapTraderWPF"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:viewModels="clr-namespace:GapTraderCore.ViewModels;assembly=GapTraderCore"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance {x:Type viewModels:GraphWindowViewModel}}"
        Title="Equity Curve Chart" Height="450" Width="800">
    <Grid>
        <oxy:PlotView Model="{Binding Plot, Mode=OneTime}" />
    </Grid>
</Window>
